# Model Configuration
MODEL_PROVIDER=groq                    # Options: groq, openai, anthropic, testleaf
TEMPERATURE=0.1
MAX_TOKENS=4096

# API Keys (based on MODEL_PROVIDER)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

TESTLEAF_API_KEY=your_testleaf_api_key_here
TESTLEAF_MODEL=gpt-4o-mini

# Embedding Configuration
EMBEDDING_PROVIDER=mistral             # Options: mistral, openai
EMBEDDING_MODEL=mistral-embed          # mistral-embed (1024 dims) or text-embedding-ada-002
EMBEDDING_DIMENSION=1024
MISTRAL_API_KEY=your_mistral_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=db_resumes
MONGODB_COLLECTION=resumes
MONGODB_VECTOR_INDEX=resume_vector_index

# Document Configuration
DOCUMENTS_FOLDER=./documents

# Ingestion Configuration
INGESTION_BATCH_SIZE=10                # Number of resumes to process in parallel for embeddings
REQUIRE_CONTACT_INFO=true              # Skip resumes without email or phone number (default: true)

# Hybrid Search Weights (must sum to 1.0)
HYBRID_VECTOR_WEIGHT=0.7               # Weight for vector similarity in hybrid search
HYBRID_KEYWORD_WEIGHT=0.3              # Weight for keyword matching in hybrid search

# Server Configuration
PORT=8787
HOST=localhost
SERVER_URL=http://localhost:8787
