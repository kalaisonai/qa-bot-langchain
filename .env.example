# ====================================
# QA BOT - ENVIRONMENT VARIABLES
# ====================================

# -----------------
# Model Provider
# -----------------
MODEL_PROVIDER=groq
TEMPERATURE=0.1
MAX_TOKENS=4096

# -----------------
# Testleaf
# -----------------
TESTLEAF_API_KEY=your_testleaf_api_key_here
TESTLEAF_MODEL=gpt-4o-mini

# -----------------
# Groq
# -----------------
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# -----------------
# OpenAI
# -----------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# -----------------
# Anthropic
# -----------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# -----------------
# Mistral AI
# -----------------
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_EMBEDDING_MODEL=mistral-embed

# -----------------
# MongoDB Configuration
# -----------------
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=db_resumes
MONGODB_COLLECTION=resumes
MONGODB_VECTOR_INDEX=resume_vector_index

# -----------------
# Embeddings Configuration
# -----------------
# Options: "mistral" (recommended), "openai"
EMBEDDING_PROVIDER=mistral
EMBEDDING_MODEL=mistral-embed
EMBEDDING_DIMENSION=1024

# -----------------
# Documents Configuration
# -----------------
DOCUMENTS_FOLDER=./documents

# -----------------
# Server Configuration
# -----------------
PORT=8787
HOST=localhost
SERVER_URL=http://localhost:8787
